<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jmatharu.gurbanigyan.YoutubeList" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonYou1"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:text="Life Story of Guru Nanak dev Ji" />

            <Button
                android:id="@+id/buttonYou2"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Life Story of Guru Gobind Singh Ji" />

            <Button
                android:id="@+id/buttonYou3"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Life Story of Shri Guru Amardas Ji" />

            <Button
                android:id="@+id/buttonYou4"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Life Story of Guru Angad Dev Ji" />

            <Button
                android:id="@+id/buttonYou5"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Sri Guru Ram Das Ji" />

            <Button
                android:id="@+id/buttonYou6"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Mool Mantar" />

            <Button
                android:id="@+id/buttonYou7"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Benti Chaupai Sahib" />

            <Button
                android:id="@+id/buttonYou8"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Sikhism spirituality" />

            <Button
                android:id="@+id/buttonYou9"
                style="@style/btnStyleOrange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
